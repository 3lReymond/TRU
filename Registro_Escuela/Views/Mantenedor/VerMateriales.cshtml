@{
    ViewData["Title"] = "VerMateriales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Materiales</h1>
<a asp-action="GuardarMat" asp-controller="Mantenedor" class="btn btn-success"><i class="bi bi-plus-circle"></i> Agregar Material</a>
<a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver a la lista</a>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID_Materiales</th>
            <th>Nombre</th>
            <th>Stock</th>
            <th>Estado</th>
            <th>ID_Usuario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID_Materiales</td>
                <td>@item.Nombre</td>
                <td>@item.Stock</td>
                <td>@item.Estado</td>
                <td>@item.ID_Usuario</td>
                <td>
                    <a asp-action="EditarMat" asp-controller="Mantenedor" class="btn btn-primary btn-sm" asp-route-ID_Materiales="@item.ID_Materiales"><i class="bi bi-pencil-fill"></i> Editar</a>
                    <a asp-action="EliminarMat" asp-controller="Mantenedor" class="btn btn-danger btn-sm" asp-route-ID_Materiales="@item.ID_Materiales"><i class="bi bi-trash3"></i> Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
